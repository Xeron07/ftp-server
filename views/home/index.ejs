<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<!--Font awesome-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
</head>

<script>
  $(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip(); 
  });
  </script>


<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
    <a class="navbar-brand" href="#">Files</a>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="#" data-toggle="tooltip" title="Home"><i class="fas fa-home"></i></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" data-toggle="tooltip" title="Profile"><i class="fas fa-user-circle"></i></a>
      </li>
    </ul>

    <ul class="navbar-nav ">
      <li class="nav-item">
        <a class="nav-link" href="#" data-toggle="tooltip" title="Upload"><i class="fas fa-upload"></i></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" data-toggle="tooltip" title="Create Folder"><i class="fas fa-folder-plus"></i></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" data-toggle="tooltip" title="Logout"><i class="fas fa-sign-out-alt"></i></a>
      </li>
    </ul>
  </nav>
  <br/>
  <br/>
<div class="container" style="margin-top:5%">

<!--===================================Directories=========================================-->

<h3>Folders</h3>
<hr/>
  <div class="row col-sm-12">
  <%var x; for (var i=0;i<dirs.length;i++){%>
      <%if(i%4==0){%>
        <div class="row col-sm-12">
          <%}%>
          <div class="col-sm-3">
  <div class="card col-sm-12">
    <div class="card-header"><i class="far fa-folder"></i><%=dirs[i]%></div>
  </div>&nbsp;&nbsp;&nbsp;
          </div>
  <%if((i+1)%4==0){%>
  </div>
  <br/><br/>
      <%}%>
  <%x=i;}%>
  <%if((x+i)%4!=0){%>
  </div>
  <%}%>
</div>
 
  <br/>
  <br/>

  <!--===================================Files=========================================-->

<h3>Files</h3>
<hr/>

<br/>


  <div class="row col-sm-12">
    <%for(var i=0;i<files.length;i++){%>
      <%if(i%3==0){%>
        <div class="row col-sm-12">
          <%}%>
          <div class="col-sm-4">
      <div class="card col-sm-12">
          <div class="card-body">
            <h4 class="card-title">File No: <%=(i+1);%></h4>
            <p class="card-text"><%=files[i]%></p>
            <a  class="card-link" onclick="downloadFile('<%=files[i]%>')">Download</a>
            <a  class="card-link" onclick="deleteFile('<%=files[i]%>')">Delete</a>
          </div>
        </div>&nbsp;&nbsp;&nbsp;</div>
        <%if((i+1)%3==0){%>
        </div>
        <br/><br/>
            <%}%>
        <%}%>
</div>
</div>
</body>
<script>
 function downloadFile(fileName){
  window.open("/home/download/"+fileName);
 }

 function deleteFile(fileName){
  $.ajax({
        url: '/deleteFile',
        method: 'POST',
        data: { fName: fileName }
        }).done(function(res) {
            if (res.success) {
            alert("file Deleted")
            window.location.reload();
        } else {
            console.log('error...ajax');
            }
});

 }

</script>



</html>
