<script>
 function downloadFile(fileName){
  window.open("/home/download/"+fileName);
 }

 function deleteFile(fileName){
  Swal.fire({
  title: 'Are you sure?',
  text: "You won't be able to revert "+fileName,
  type: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.value) {
    $.ajax({
        url: '/deleteFile',
        method: 'POST',
        data: { fName: fileName }
         }).done(function ( data ) {
           if(data.success){
             Swal.fire({title:"Deleted",type:"success"}).then((result)=>{
              window.location.reload();
             });
            
           }
      });
  }
});
   

 }

 function createFolder(){
   var folderName;
   Swal.fire({
     title:"Enter folder name",
     input:"text",
     confirmButtonText: 'Create Folder',
     showCancelButton: true
   }).then((result)=>{
     if(result.value!=""){
       folderName=result.value;
       Swal.fire({
             title: "Creating",
             html:"<div class='progress'>"+
                   "<div id='progressing' class='progress-bar progress-bar-striped progress-bar-animated' style='width:0%'></div>"+
                    "</div>",
             timer:5000,
             onBeforeOpen:()=>{
                Swal.showLoading();
              const content = Swal.getContent();
              const $ = content.querySelector.bind(content);
              var p=$("#progressing");
              var val=0;
              var s="";
              timerInterval = setInterval(() => {
                       val+=5;
                       s=val+"%";
                       p.style.width=s;
                       }, 100)
             },
             onClose: () => {
                     clearInterval(timerInterval);
                     window.location.reload();
             }
       });

       $.ajax({
        url: '/createFolder',
        method: 'POST',
        data: { dirName: folderName }
         }).done(function ( data ) {
           if(data.success){ 
             console.log("success");
           }
      });
     }
   });
 }

